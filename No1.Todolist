<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>No1.Todolist</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- 引入 Bootstrap -->
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
	<!-- jQuery (Bootstrap 的 JavaScript 插件需要引入 jQuery) -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
	<!-- JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
<div class="container">
	<!-- 導覽列開始 -->
   <div class="row" style="background-color: #4A90E2;">
    	<div class="col-xs-12 .col-sm-12 .col-md-6 .col-lg-6">
      		<ul class="nav nav-pills nav-justified" 
      		style="font-family: Roboto-Medium; font-size: 24px; color: #00408B;">
			    <li class="active"><a href="#">My Tasks</a></li>
			    <li><a href="#">In Progress</a></li>
			    <li><a href="#">Completed</a></li>
			</ul>
    	</div>
   </div><!-- 導覽列結束 -->
	<!-- 第二列開始 -->
   <div class="row" style="background-color: #E1E1E1; height: 500px;">
    	<div class="col-sm-6 col-sm-offset-3">
    		<!-- 輸入框開始 -->
			<form role="form" style="margin-top: 20px;">
				<div class="form-group">
					<input type="text" class="form-control form-control input-lg" id="name" 
						   placeholder="+ Add Task">
				</div>
			</form><!-- 輸入框結束 -->
			<div class="panel panel-default" style="background-color: #FFF2DC; height: auto;">
			    <div class="panel-body">
			        <div class="checkbox" style="zoom: 2;">
						<label>
							<input type="checkbox">Type Something Here..</label>
					</div><!--  class="checkbox" -->
			    </div><!--  class="panel-body" -->
			    <!-- 按鈕+圖案 開始 -->
				<button type="button" class="btn btn-default btn-xs">
					<span class="glyphicon glyphicon-pencil pull-lift"></span>
				</button>
				<button type="button" class="btn btn-default btn-xs">
					<span class="glyphicon glyphicon-star-empty pull-lift"></span>
				</button>
				<button type="button" class="btn btn-default btn-xs">
					<span class="glyphicon glyphicon-comment pull-lift"></span>
				</button>
				<!-- 按鈕+圖案 結束 -->
			</div><!--  class="panel panel-default" -->
    	</div><!-- class="col-sm-6 col-sm-offset-3" -->
   </div><!--  class="row" -->
</div><!-- class="container" -->
</body>
</html>
